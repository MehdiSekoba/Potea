<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Potea" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Potea" parent="Base.Theme.Potea">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="Q">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="Q">true</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.App.CircularProgressIndicator</item>

    </style>
    <!--custom style-->
    <style name="LightProgress">
        <item name="android:text">@string/loading</item>
        <item name="android:textSize">@dimen/_16font_mdp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="light_color">@color/light_color</item>
    </style>
    <!--TextSize||fontBold-->
    <style name="TextAppearance_Bold">
        <item name="android:textSize">@dimen/_14font_mdp</item>
        <item name="fontPath">fonts/urbanist_bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--TextSize||fontMedium-->
    <style name="TextAppearance_medium">
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="fontPath">fonts/urbanist_medium.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--TextSize||fontSmall-->
    <style name="TextAppearance_small">
        <item name="android:textSize">@dimen/_10font_mdp</item>
        <item name="fontPath">fonts/urbanist_italic.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--Green material button-->
    <style name="GreenMaterialButton" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/button_state_colors</item>
        <item name="cornerRadius">@dimen/_15mdp</item>
        <item name="iconStartPadding">@dimen/_6mdp</item>
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="android:inset">0dp</item>
        <item name="fontPath">fonts/urbanist_bold.ttf</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>
    <!--Shape cardview-->
    <style name="RoundedCardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_38mdp</item>
        <item name="cornerSizeTopRight">@dimen/_38mdp</item>
    </style>
    <!--Round ImageView-->
    <style name="RoundImageViewProfile">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundImageViewProduct">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>
    <!--Colored shadows-->
    <style name="ColoredShadowDark">
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/Magic_Mint</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/Magic_Mint</item>
    </style>
    <!--ProgressBar-->
    <style name="GreenProgressbar">
        <item name="colorAccent">@color/UFO_Green</item>
    </style>
    <!--bottom navigation-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorOnSurfaceVariant">@android:color/transparent</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>
    <!--text input-->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">@color/gray_900</item>
        <item name="boxBackgroundColor">@color/Light_Grey</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10mdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10mdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10mdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10mdp</item>
        <item name="boxStrokeWidth">@dimen/_1mdp</item>
        <item name="boxStrokeWidthFocused">@dimen/_1mdp</item>
        <item name="startIconTint">@color/icon_tint</item>
        <item name="startIconDrawable">@drawable/ic_email</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxStrokeColor">@color/item_text_input_layout_tint</item>
        <item name="boxBackgroundMode">outline</item>
    </style>


    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/gray_300</item>
        <item name="colorOnSurface">@color/gray_300</item>
        <item name="colorError">@color/Carnelian</item>
        <item name="editTextStyle">@style/Widget.Material3.TextInputEditText.OutlinedBox</item>
    </style>
    <!--Tab layout-->
    <style name="Widget.App.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:background">@drawable/tab_layout_background</item>
        <item name="tabBackground">@drawable/tab_layout_selector</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabPaddingEnd">@dimen/_8mdp</item>
        <item name="tabPaddingStart">@dimen/_8mdp</item>

    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/whiteSmoke</item>
        <item name="colorSurface">@color/whiteSmoke</item>
        <item name="colorOnSurface">@color/whiteSmoke</item>
    </style>

    <style name="TabLayoutFontNormal" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">@dimen/_10font_mdp</item>
    </style>

    <style name="TabLayoutFontBold" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">@dimen/_10font_mdp</item>
    </style>
    <!--Bottom sheet dialog-->
    <style name="RemoveDialogBackground" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>

    </style>
    <!--Range Slider-->
    <style name="MyRangeStyle" parent="Widget.Material3.Slider.Legacy">
        <item name="materialThemeOverlay">@style/BlueSlider</item>
        <item name="labelStyle">@style/Widget.Tooltip</item>
    </style>

    <style name="BlueSlider">
        <item name="colorPrimary">@color/Magic_Mint</item>
        <item name="colorOnPrimary">@color/Deep_Moss_Green</item>
    </style>

    <style name="Widget.Tooltip" parent="Widget.Material3.Tooltip">
        <item name="backgroundTint">@color/Green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Tooltip</item>
    </style>

    <style name="TextAppearance.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
    </style>
    <!--AppCompatRatingBar-->
    <style name="myRateBar" parent="Widget.AppCompat.RatingBar">
        <!--non select star color-->
        <item name="android:colorControlNormal">#4D000000</item>
        <!--select star color-->
        <item name="colorControlActivated">@color/red_400</item>
    </style>
    <!--style MaterialDialog-->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="elevationOverlayEnabled">false</item>
        <item name="colorSurfaceContainerHigh">@color/white</item>
        <!-- Radio color -->
        <item name="colorSecondary">@color/UFO_Green</item>
        <!-- Background color -->
        <item name="colorSurface">@color/white</item>
        <!-- Message color -->
        <item name="colorOnSurfaceVariant">@color/gray_900</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleStyle</item>
        <!--
                <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyStyle</item>
        -->

    </style>

    <style name="DialogTitleStyle" parent="@style/MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontPath">fonts/urbanist_bold.ttf</item>

    </style>

    <style name="DialogBodyStyle" parent="@style/MaterialAlertDialog.Material3.Body.Text">
        <item name="fontPath">fonts/urbanist_medium.ttf</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <!--radio bottom-->
    <style name="Widget.App.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/button_tint</item>
        <item name="android:inset">0dp</item>
    </style>
    <!--search style-->
    <!-- Search Text Style. -->
    <style name="SearchTextStyle">
        <!-- Custom values write to here for SearchEditText. -->
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:enabled">true</item>
        <item name="android:hint">Search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">15</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColorHint">@color/gray_200</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>
    <style name="Widget.App.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator.Legacy">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
        <item name="trackThickness">@dimen/_2mdp</item>
        <item name="trackColor">@color/shimmer</item>
        <item name="trackColorActive">@color/UFO_Green</item>
        <item name="trackColorInactive">@color/shimmer</item>
        <item name="android:indeterminate">false</item>
    </style>
    <style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/UFO_Green</item>

    </style>
</resources>