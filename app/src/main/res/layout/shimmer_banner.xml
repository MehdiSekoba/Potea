<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/img_big"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/_74mdp"
        android:background="@drawable/bg_shimmer_big"/>
    <View
        android:id="@+id/img_small"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/_4mdp"
        app:layout_constraintStart_toEndOf="@id/img_big"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_4mdp"
        android:background="@drawable/bg_shimmer_big"/>
    <View
        android:id="@+id/big_txt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_12mdp"
        app:layout_constraintStart_toStartOf="@id/img_big"
        app:layout_constraintEnd_toStartOf="@id/img_small"
        android:layout_marginHorizontal="@dimen/_6mdp"
        android:background="@drawable/bg_shimmer_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_12mdp"/>
    <View
        android:id="@+id/small_txt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_12mdp"
        app:layout_constraintStart_toStartOf="@id/img_small"
        app:layout_constraintStart_toEndOf="@id/img_small"
        android:layout_marginHorizontal="@dimen/_6mdp"
        android:background="@drawable/bg_shimmer_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_12mdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>